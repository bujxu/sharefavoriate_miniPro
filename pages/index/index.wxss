.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.share{
  position: absolute;
  bottom: 10rpx;
  width: 80%;
  margin-left: 10%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #AB956D;
  border-radius: 6rpx;
  text-align: center;
  color: #fff;
  letter-spacing: 2px;
}